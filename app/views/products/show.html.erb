<p id="notice"><%= notice %></p>

<div class="big_show">
<p>
  <strong>Hotel:</strong>
  <%= @product.name %>
</p>

<p>
  <%= image_tag @product.url %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<p>
  <strong>Price:</strong>
  <%= @product.formatted_price %>
</p>
</div>


<h3>Reviews</h3>
<% @product.reviews.each do |review| %>
<p>
<%= review.comment %>
<br>
Added on: <%= review.created_at %>
</p>
<% end %>

<h3>New Review</h3>
<%= render 'reviews/form' %>

 <a class="btn btn-primary"<%= link_to 'Edit', edit_product_path(@product) %></a>

 <a class="btn btn-primary"<%= link_to 'Back', products_path %></span></a>
